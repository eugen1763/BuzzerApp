{
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/buzzerapp.log",
                    "restrictedToMinimumLevel": "Warning",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}
